{
  "name": "ffc-pay-enrichment",
  "version": "1.29.19",
  "description": "FFC Payment enrichment service",
  "homepage": "https://github.com/DEFRA/ffc-pay-enrichment",
  "main": "app/index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "jest --runInBand --forceExit",
    "test:acceptance": "cucumber-js --config ./test/acceptance/cucumber.js",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch app/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "John Watson john.watson1@defra.gov.uk",
    "Steve Dickinson steve.dickinson@defra.gov.uk",
    "Marc Templeton m.templeton@kainos.com",
    "Simon Dunn simon.dunn1@defra.gov.uk",
    "Kirsten Williamson kirsten.williamson@kainos.com",
    "Sam Plackett samuel.plackett@eviden.com"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/identity": "4.4.1",
    "@joi/date": "2.1.1",
    "applicationinsights": "1.8.10",
    "ffc-messaging": "2.10.1",
    "ffc-pay-event-publisher": "1.2.0",
    "joi": "17.13.3",
    "log-timestamp": "0.3.0",
    "moment": "2.30.1",
    "pg": "8.12.0",
    "pg-hstore": "2.3.4",
    "sequelize": "6.37.3",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "9.3.0",
    "hamjest": "3.7.3",
    "jest": "27.3.1",
    "jest-junit": "13.0.0",
    "nodemon": "3.0.1",
    "standard": "16.0.4"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
